<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="160.0" prefWidth="300.0" spacing="5" styleClass="my-Box1-class" stylesheets="@Styles/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Chat.Controller">
   <!--   8.0.171-->
   <padding>
      <Insets bottom="10" left="5" right="5" top="5" />
   </padding>
   <children>
      <Label alignment="CENTER" prefHeight="20.0" prefWidth="300.0" styleClass="auth-lable-class" text="Auth..." textOverrun="CLIP" />
      <TextField fx:id="log" focusTraversable="false" onAction="#singIn" onMouseClicked="#colorBtn" prefHeight="40.0" prefWidth="300.0" promptText=" Login" styleClass="my-btn-class">
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect></TextField>
      <PasswordField fx:id="pass" focusTraversable="false" onAction="#singIn" onMouseClicked="#colorBtn" prefHeight="40.0" prefWidth="300.0" promptText=" Password" styleClass="my-btn-class">
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect></PasswordField>
      <Button blendMode="SRC_ATOP" mnemonicParsing="false" onAction="#singIn" prefHeight="30.0" prefWidth="300.0" styleClass="my-btn-class" text="SING IN">
         <effect>
            <SepiaTone />
         </effect></Button>
      <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="300.0" styleClass="btn-close-class" text="EXIT"
              onMouseClicked="#testExit">
         <effect>
            <Glow />
         </effect></Button>
   </children>
   <effect>
      <InnerShadow />
   </effect>
</VBox>
